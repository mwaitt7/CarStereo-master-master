<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CarStereo"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#ff828282"
        android:layout_gravity="top"
        android:longClickable="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <Button
                android:layout_width="140dp"
                android:layout_height="137dp"
                android:text="Power"
                android:id="@+id/powerButton"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:textColor="#ff00df00" />

            <Switch
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:text="AM/FM"
                android:id="@+id/amfmSwitch"
                android:textColor="#ffffffff"
                android:layout_gravity="left"
                android:checked="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tuner"
                android:id="@+id/tunerText"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tuner"
                android:layout_gravity="top|center_horizontal"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/tuner1"
                    android:layout_weight="1"
                    android:textColor="#ff00df00" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/tuner2"
                    android:layout_weight="1"
                    android:textColor="#ff00df00" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/tuner3"
                    android:layout_weight="1"
                    android:textColor="#ff00df00" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/tuner4"
                    android:layout_weight="1"
                    android:textColor="#ff00df00" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/tuner5"
                    android:textColor="#ff00df00" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/tuner6"
                    android:textColor="#ff00df00" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Volume"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

            <SeekBar
                android:layout_width="565dp"
                android:layout_height="wrap_content"
                android:id="@+id/volume"
                android:layout_gravity="center_vertical|bottom"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="60px"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="74dp" />

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/Station"
                android:background="#ff00df00"
                android:textColor="#ff000000" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="300px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/volLevel"
                android:background="#ff00df00"
                android:textColor="#ff000000"
                android:text="60%" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="bottom"
        android:background="#ff313131"
        android:weightSum="1"
       >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPEAT"
                android:id="@+id/button8"
                android:layout_gravity="left|bottom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:id="@+id/button9"
                android:layout_gravity="left" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:text="PLAY"
                android:id="@+id/button4"
                android:layout_weight="0.16" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:text="PAUSE"
                android:id="@+id/button5"
                android:layout_weight="0.16" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:text="STOP"
                android:id="@+id/button7"
                android:layout_weight="0.16" />
        </LinearLayout>

        <Space
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0" />

            <ImageView
                android:layout_width="500dp"
                android:layout_height="12dp"
                android:id="@+id/cdSlot"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:background="@drawable/cd" />

        </LinearLayout>

        <Space
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.92" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right">

            <Button
                android:layout_width="106dp"
                android:layout_height="100dp"
                android:text="EJECT"
                android:id="@+id/ejectButton" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
